{{ 'section-cover-anatomy.css' | asset_url | stylesheet_tag }}

<section class="cover-anatomy-wrapper">
  <div class="cover-anatomy-title">
    {{ section.settings.title }}
  </div>
  <div class="cover-anatomy-grid">
    <img class="cover-anatomy-image"
      src="{{ section.settings.image | img_url: '1500x' }}"
      alt="{{ section.settings.image.alt | escape }}"
    >
    {% for i in (1..7) %}
    <!-- {{ loop_index }} -->
      <div class="cover-anatomy-tooltip-{{ i }}">
        <p class="bold">{{ section.settings.item-title-[i] }}</p>
        <p>{{ section.settings.item-text-[i] }}</p>
      </div>
    {% endfor %}
  </div>
</section>
